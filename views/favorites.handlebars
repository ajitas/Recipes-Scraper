<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center buttons">
        <button class="btn" id="scrape-recipes" title="Get new recipes">Scrape New Recipes</button>
        <button class="btn" id="favorite-recipes" title="View your favorite recipes">Favorite Recipes</button>
        <button class="btn" id="view-all-recipes" title="View all recipes">View All Recipes</button>
    </div>
    <div class="col-md-2"></div>
</div>
<div id="recipes">
    {{#each recipes}}
        <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8 single-recipe-div">
                    <div class="row">
                        <div class="col-md-10 text-center">
                            <a class="single-recipe-link" target=_blank href="{{this.link}}">{{this.title}}</a>
                        </div>
                        <div class="col-md-2 text-center">
                            <button data-id="{{this._id}}" class="added-to-favorites-favorite-recipes btn" title="Favorites"><i class="fa fa-heart"></i></button> 
                            <button data-id="{{this._id}}" class="add-a-note btn" type="button" data-toggle="modal" data-target="#exampleModalCenter" title="Notes"><i class="fa fa-sticky-note"></i></button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <textarea id="bodyinput" name="body"></textarea>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary" id="savenote">Save Note</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img class="single-recipe-image" src="{{this.image}}">
                        </div>
                        <div class="col-md-8">
                            <p>{{this.summary}}</p>
                            <p class="single-recipe-rating text-center">Rating: {{rating}}/4</p>
                            <p class="single-recipe-makeagain text-center">MakeAgain: {{makeagain}}%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
    {{/each}}
</div>